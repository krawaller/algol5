{
  "env": {
    "node": true
  },
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react",
    "types": ["node", "jest", "fs-extra", "prettier", "lodash.isequal"]
  },
  "include": ["modules/types", "modules/games/definitions", "global.d.ts", "modules/common"],
  "exclude": [
    "archive",
    "dev",
    "node_modules",
    "**/node_modules",
    "dist",
    "commands"
  ]
}
